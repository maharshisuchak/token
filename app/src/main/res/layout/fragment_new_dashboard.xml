<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/number_five_dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/linearDashFooter">

        <LinearLayout
            android:id="@+id/linearWalletMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linearWallet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_wallet_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginRight="@dimen/number_twenty_dp"
                    android:layout_marginTop="@dimen/number_ten_dp"
                    android:gravity="center"
                    android:text="Dave@token.me"
                    android:textColor="@android:color/darker_gray" />

                <TextView
                    android:id="@+id/txt_wallet_hb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/wallet_mb_title"
                    android:textColor="@color/gray_text"
                    android:textSize="@dimen/number_fifteen_dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">

                    <TextView
                        android:id="@+id/txt_wallet_dollar_sign"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:text="@string/wallet_ds_title"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="@dimen/number_thirty_dp" />

                    <TextView
                        android:id="@+id/txt_wallet_dollar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="635"
                        android:textColor="@color/gray_text"
                        android:textSize="@dimen/number_fifty_dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt_wallet_dollar_extra"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:text="39"
                        android:textColor="@color/gray_text"
                        android:textSize="@dimen/number_thirty_dp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/txt_wallet_bitcoin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="1.0371 Bitcoin"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="@dimen/landing_text_size_footer" />

                <TextView
                    android:id="@+id/txt_wallet_add_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/number_thirty_dp"
                    android:background="@drawable/add_money_border"
                    android:drawableLeft="@drawable/ic_add"
                    android:drawablePadding="10dp"
                    android:gravity="center"
                    android:paddingLeft="@dimen/number_twenty_dp"
                    android:paddingRight="@dimen/number_twenty_dp"
                    android:text="@string/wallet_am_title"
                    android:textColor="@color/white"
                    android:textSize="@dimen/landing_text_size_footer"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_hide_balances"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginBottom="@dimen/number_twenty_dp"
                    android:layout_marginLeft="@dimen/number_ten_dp"
                    android:layout_marginTop="@dimen/number_forty_dp"
                    android:gravity="center"
                    android:text="@string/wallet_hbs_title"
                    android:textColor="@android:color/darker_gray" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/linear_bc_spending"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/number_five_dp"
                    android:paddingLeft="@dimen/number_ten_dp"
                    android:paddingRight="@dimen/number_ten_dp"
                    android:paddingTop="@dimen/number_five_dp">

                    <ImageView
                        android:id="@+id/image_bc_spending"
                        android:layout_width="@dimen/icon_width"
                        android:layout_height="@dimen/icon_height"
                        android:gravity="right"
                        android:src="@drawable/ic_bitcoin" />

                    <TextView
                        android:id="@+id/text_bc_spending_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/number_ten_dp"
                        android:layout_weight="1"
                        android:text="@string/bc_spending"
                        android:textColor="@color/gray_text"
                        android:textSize="@dimen/landing_text_size_sign_up_two_header"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/text_bc_spending_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="0"
                        android:textColor="@color/gray_text"
                        android:textSize="@dimen/landing_text_size_sign_up_two_header"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear_bc_savings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/number_five_dp"
                    android:paddingLeft="@dimen/number_ten_dp"
                    android:paddingRight="@dimen/number_ten_dp"
                    android:paddingTop="@dimen/number_five_dp">

                    <ImageView
                        android:id="@+id/image_bc_savings"
                        android:layout_width="@dimen/icon_width"
                        android:layout_height="@dimen/icon_height"
                        android:gravity="right"
                        android:src="@drawable/ic_bitcoin" />

                    <TextView
                        android:id="@+id/text_bc_savings_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/number_ten_dp"
                        android:layout_weight="1"
                        android:text="@string/bc_savings"
                        android:textColor="@color/gray_text"
                        android:textSize="@dimen/landing_text_size_sign_up_two_header"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/text_bc_savings_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="0"
                        android:textColor="@color/gray_text"
                        android:textSize="@dimen/landing_text_size_sign_up_two_header"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear_lc_spending"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/number_five_dp"
                    android:paddingLeft="@dimen/number_ten_dp"
                    android:paddingRight="@dimen/number_ten_dp"
                    android:paddingTop="@dimen/number_five_dp">

                    <ImageView
                        android:id="@+id/image_lc_spending"
                        android:layout_width="@dimen/icon_width"
                        android:layout_height="@dimen/icon_height"
                        android:gravity="right"
                        android:src="@drawable/ic_bitcoin" />

                    <TextView
                        android:id="@+id/text_lc_spending_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/number_ten_dp"
                        android:layout_weight="1"
                        android:text="@string/lc_spending"
                        android:textColor="@color/gray_text"
                        android:textSize="@dimen/landing_text_size_sign_up_two_header"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/text_lc_spending_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="0"
                        android:textColor="@color/gray_text"
                        android:textSize="@dimen/landing_text_size_sign_up_two_header"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear_lc_savings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/number_five_dp"
                    android:paddingLeft="@dimen/number_ten_dp"
                    android:paddingRight="@dimen/number_ten_dp"
                    android:paddingTop="@dimen/number_five_dp">

                    <ImageView
                        android:id="@+id/image_lc_savings"
                        android:layout_width="@dimen/icon_width"
                        android:layout_height="@dimen/icon_height"
                        android:gravity="right"
                        android:src="@drawable/ic_bitcoin" />

                    <TextView
                        android:id="@+id/text_lc_savings_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/number_ten_dp"
                        android:layout_weight="1"
                        android:text="@string/lc_savings"
                        android:textColor="@color/gray_text"
                        android:textSize="@dimen/landing_text_size_sign_up_two_header"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/text_lc_savings_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="0"
                        android:textColor="@color/gray_text"
                        android:textSize="@dimen/landing_text_size_sign_up_two_header"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/linearDashFooter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:padding="@dimen/number_ten_dp">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image_send"
                android:layout_width="@dimen/icon_width"
                android:layout_height="@dimen/icon_height"
                android:layout_gravity="center"
                android:gravity="right"
                android:src="@drawable/ic_menu_send_money" />

            <TextView
                android:id="@+id/txt_send"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/send_title"
                android:textColor="@android:color/darker_gray" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image_request"
                android:layout_width="@dimen/icon_width"
                android:layout_height="@dimen/icon_height"
                android:layout_gravity="center"
                android:gravity="right"
                android:src="@drawable/ic_menu_request_money" />

            <TextView
                android:id="@+id/txt_request"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/request_title"
                android:textColor="@android:color/darker_gray" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image_deposit"
                android:layout_width="@dimen/icon_width"
                android:layout_height="@dimen/icon_height"
                android:layout_gravity="center"
                android:gravity="right"
                android:src="@drawable/ic_menu_deposit" />

            <TextView
                android:id="@+id/txt_deposit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/deposit_title"
                android:textColor="@android:color/darker_gray" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image_withdraw"
                android:layout_width="@dimen/icon_width"
                android:layout_height="@dimen/icon_height"
                android:layout_gravity="center"
                android:gravity="right"
                android:src="@drawable/ic_menu_withdraw" />

            <TextView
                android:id="@+id/txt_withdraw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/withdraw_title"
                android:textColor="@android:color/darker_gray" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>