<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.smartsensesolutions.token.activity.ReceiveMoney">

    <LinearLayout
        android:id="@+id/linearHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/number_ten_dp"
        android:layout_marginRight="@dimen/number_ten_dp"
        android:layout_marginTop="@dimen/number_five_dp"
        android:onClick="customBackPressed"
        android:orientation="horizontal"
        android:padding="@dimen/number_five_dp">

        <ImageView
            android:id="@+id/imageBack"
            android:layout_width="@dimen/back_width"
            android:layout_height="@dimen/back_width"
            android:layout_gravity="center"
            android:src="@drawable/ic_back" />

        <TextView
            android:id="@+id/sign_up_one_sign_up_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/number_ten_dp"
            android:gravity="center"
            android:text="@string/rm_rm_title"
            android:textColor="@color/dark_grey" />

    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/nav_header_image_height"
                android:layout_gravity="center"
                android:paddingTop="@dimen/nav_header_vertical_spacing"
                app:srcCompat="@drawable/ic_hello_logo" />

            <TextView
                android:id="@+id/txt_send_from_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/number_ten_dp"
                android:layout_marginTop="@dimen/number_twenty_dp"
                android:gravity="center"
                android:text="@string/rm_deposit_title"
                android:textColor="@color/gray_text"
                android:textSize="@dimen/number_fifteen_dp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spinner_receive_money"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/number_ten_dp"
                android:background="@drawable/spinner_border" />

            <ImageView
                android:id="@+id/imageReceiveBarcode"
                android:layout_width="@dimen/barcode_width"
                android:layout_height="@dimen/barcode_height"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/number_ten_dp"
                android:background="@color/gray_text"
                android:padding="@dimen/number_ten_dp"
                android:paddingTop="@dimen/nav_header_vertical_spacing"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/ic_qr_code" />

            <TextView
                android:id="@+id/txt_barcode_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/number_ten_dp"
                android:layout_marginTop="@dimen/number_twenty_dp"
                android:gravity="center"
                android:text="32gMri1alhdhfdbfbkjsdfkjfkdgbgknjk"
                android:textColor="@color/gray_text"
                android:textSize="@dimen/number_fifteen_dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/number_ten_dp">

                <TextView
                    android:id="@+id/txt_copy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/number_ten_dp"
                    android:layout_weight="1"
                    android:background="@color/orange"
                    android:drawableLeft="@mipmap/ic_launcher_round"
                    android:drawablePadding="@dimen/number_ten_dp"
                    android:gravity="center"
                    android:paddingBottom="@dimen/number_five_dp"
                    android:paddingLeft="@dimen/number_five_dp"
                    android:paddingRight="@dimen/number_five_dp"
                    android:paddingTop="@dimen/number_five_dp"
                    android:text="@string/rm_copy_title"
                    android:textColor="@color/white"
                    android:textSize="@dimen/landing_text_size_footer"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/number_thirty_dp"
                    android:layout_marginRight="@dimen/number_ten_dp"
                    android:layout_weight="1"
                    android:background="@color/sky"
                    android:drawableLeft="@mipmap/ic_launcher_round"
                    android:drawablePadding="@dimen/number_ten_dp"
                    android:gravity="center"
                    android:paddingBottom="@dimen/number_five_dp"
                    android:paddingLeft="@dimen/number_five_dp"
                    android:paddingRight="@dimen/number_five_dp"
                    android:paddingTop="@dimen/number_five_dp"
                    android:text="@string/rm_share_title"
                    android:textColor="@color/white"
                    android:textSize="@dimen/landing_text_size_footer"
                    android:textStyle="bold" />

            </LinearLayout>

            <TextView
                android:id="@+id/txt_manually"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/number_ten_dp"
                android:layout_marginRight="@dimen/number_ten_dp"
                android:layout_marginTop="@dimen/number_thirty_dp"
                android:background="@drawable/normal_border"
                android:drawableLeft="@mipmap/ic_launcher_round"
                android:gravity="center"
                android:padding="@dimen/number_five_dp"
                android:text="@string/rm_request_specific_title"
                android:textColor="@color/gray_text"
                android:textSize="@dimen/landing_text_size_sign_up_two_header"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_footer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/number_ten_dp"
                android:layout_marginRight="@dimen/number_ten_dp"
                android:layout_marginTop="@dimen/number_thirty_dp"
                android:gravity="center"
                android:padding="@dimen/number_ten_dp"
                android:text="@string/rm_qr_terms_title"
                android:textColor="@color/gray_text"
                android:textSize="@dimen/landing_text_menu_detail" />


        </LinearLayout>

    </ScrollView>

</LinearLayout>