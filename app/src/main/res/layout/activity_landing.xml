<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_landing_background"
    android:orientation="vertical"
    tools:context="com.smartsensesolutions.token.activity.Landing">

    <TextView
        android:id="@+id/txt_landing_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_footer_landing"
        android:gravity="center"
        android:textColor="@color/dark_grey"
        android:text="@string/landing_title"
        android:textSize="@dimen/landing_text_size_header" />

    <ImageView
        android:id="@+id/img_landing_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:src="@drawable/ic_landing_logo_with_text" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/margin_landing"
        android:layout_marginRight="@dimen/margin_landing"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_landing_sign_up"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/txt_landing_sign_in"
            android:layout_centerHorizontal="true"
            android:layout_gravity="bottom"
            android:layout_marginBottom="@dimen/margin_landing"
            android:layout_weight="1"
            android:background="@drawable/round_border"
            android:gravity="center"
            android:text="@string/landing_signup_title"
            android:textColor="@color/white"
            android:textSize="@dimen/landing_text_size_footer"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_footer_landing"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_landing_sign_in_extra"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:textColor="@android:color/darker_gray"
                android:text="@string/landing_signin_extra_title"
                android:textSize="@dimen/landing_text_size_footer" />

            <TextView
                android:id="@+id/txt_landing_sign_in"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_gravity="right"
                android:layout_marginLeft="@dimen/margin_left_landing"
                android:layout_marginRight="@dimen/number_fifteen_dp"
                android:layout_toRightOf="@+id/txt_landing_sign_in_extra"
                android:layout_weight="1"
                android:gravity="right"
                android:text="@string/landing_signin_title"
                android:textColor="@color/orange"
                android:textSize="@dimen/landing_text_size_footer"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
