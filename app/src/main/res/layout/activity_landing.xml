<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.smartsensesolutions.token.activity.Landing">

    <TextView
        android:id="@+id/txt_landing_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_footer_landing"
        android:text="@string/landing_title"
        android:textSize="@dimen/landing_text_size_header" />

    <ImageView
        android:id="@+id/img_landing_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:src="@mipmap/ic_launcher_round" />

    <TextView
        android:id="@+id/txt_landing_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_landing_logo"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:text="@string/landing_footer_title"
        android:textSize="@dimen/landing_text_size_footer" />

    <TextView
        android:id="@+id/txt_landing_sign_up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txt_landing_sign_in"
        android:layout_centerHorizontal="true"
        android:layout_gravity="bottom"
        android:layout_marginBottom="@dimen/margin_landing"
        android:layout_marginLeft="@dimen/margin_footer_landing"
        android:layout_marginRight="@dimen/margin_footer_landing"
        android:background="@drawable/round_border"
        android:gravity="center"
        android:text="@string/landing_signup_title"
        android:textColor="@color/white"
        android:textSize="@dimen/landing_text_size_footer"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_landing_sign_in_extra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="bottom"
        android:layout_marginBottom="@dimen/margin_footer_landing"
        android:text="@string/landing_signin_extra_title" />

    <TextView
        android:id="@+id/txt_landing_sign_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:layout_marginLeft="@dimen/margin_left_landing"
        android:textStyle="bold"
        android:layout_marginBottom="@dimen/margin_footer_landing"
        android:layout_toRightOf="@+id/txt_landing_sign_in_extra"
        android:text="@string/landing_signin_title"
        android:textColor="@color/orange" />

</RelativeLayout>
