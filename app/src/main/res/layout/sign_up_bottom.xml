<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linear_sing_up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txt_sign_up_continue"
        android:layout_marginBottom="@dimen/margin_numbers_top"
        android:layout_marginLeft="@dimen/margin_footer_landing"
        android:layout_marginRight="@dimen/margin_footer_landing"
        android:layout_marginTop="@dimen/margin_numbers_top"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_indicator_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_grey_default_dot" />

        <ImageView
            android:id="@+id/img_indicator_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_grey_default_dot" />

        <ImageView
            android:id="@+id/img_indicator_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_grey_default_dot" />

        <ImageView
            android:id="@+id/img_indicator_four"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_grey_default_dot" />

        <ImageView
            android:id="@+id/img_indicator_five"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_grey_default_dot" />
    </LinearLayout>

    <TextView
        android:id="@+id/txt_sign_up_continue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/img_logo"
        android:layout_centerHorizontal="true"
        android:layout_gravity="bottom"
        android:layout_marginLeft="@dimen/margin_footer_landing"
        android:layout_marginRight="@dimen/margin_footer_landing"
        android:layout_marginTop="@dimen/margin_numbers_top"
        android:background="@drawable/continue_border"
        android:gravity="center"
        android:text="@string/sing_up_continue_title"
        android:textColor="@color/white"
        android:textSize="@dimen/landing_text_size_sign_up_two_header"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/number_twenty_dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_bottom_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:drawableLeft="@drawable/ic_left_slim_arrow"
            android:gravity="left"
            android:text="@string/back_title"
            android:textColor="@android:color/darker_gray"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/img_logo"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@drawable/ic_hello_logo" />

        <TextView
            android:id="@+id/txt_bottom_skip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/skip_title"
            android:textColor="@android:color/darker_gray"
            android:visibility="invisible" />

    </LinearLayout>

</LinearLayout>