<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linear_bc_spending"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ripple_wallets"
    android:clickable="true"
    android:paddingBottom="@dimen/number_ten_dp"
    android:paddingLeft="@dimen/number_ten_dp"
    android:paddingRight="@dimen/number_ten_dp"
    android:paddingTop="@dimen/number_ten_dp">

    <ImageView
        android:id="@+id/image_bc_spending"
        android:layout_width="@dimen/dash_icon_width"
        android:layout_height="@dimen/dash_icon_height"
        android:gravity="right"
        android:src="@drawable/ic_bitcoin" />

    <TextView
        android:id="@+id/text_bc_spending_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/number_ten_dp"
        android:layout_weight="1"
        android:text="@string/bc_spending"
        android:textColor="@color/gray_text"
        android:textSize="@dimen/landing_text_size_sign_up_two_header" />


    <TextView
        android:id="@+id/text_bc_spending_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="right"
        android:text="0"
        android:textColor="@color/gray_text"
        android:textSize="@dimen/landing_text_size_sign_up_two_header"
        android:textStyle="bold" />

</LinearLayout>