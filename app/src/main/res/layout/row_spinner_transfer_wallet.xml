<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/number_five_dp">

    <ImageView
        android:id="@+id/image_bitcoin"
        android:layout_width="@dimen/spinner_icon_width"
        android:layout_height="@dimen/spinner_icon_height"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/number_five_dp"
        android:layout_marginRight="@dimen/number_five_dp"
        android:src="@drawable/ic_bitcoin" />

    <TextView
        android:id="@+id/spinner_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_toLeftOf="@+id/spinner_value"
        android:layout_toRightOf="@+id/image_bitcoin"
        android:gravity="left"
        android:text="Bitcoin Spending"
        android:textColor="@color/gray_text"
        android:textSize="@dimen/number_fifteen_dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/spinner_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="$365.32"
        android:textColor="@color/gray_text"
        android:textSize="@dimen/number_fifteen_dp"
        android:textStyle="bold" />

</RelativeLayout>